@model CambiarContrasena
<div class="modal fade" id="Confirmacion" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h5 class="modal-title" id="exampleModalLabel">Cambiar contraseña</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("CambiarContrasena", "Configuracion", FormMethod.Post, new { @autocomplete = "off" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(model => model.contrasenaActual, htmlAttributes: new { @class = "control-label col-md-12 Color-Black" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.contrasenaActual, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.contrasenaActual, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.contrasenaNueva, htmlAttributes: new { @class = "control-label col-md-12 Color-Black" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.contrasenaNueva, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.contrasenaNueva, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ContrasenaRepetir, htmlAttributes: new { @class = "control-label col-md-12 Color-Black" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.ContrasenaRepetir, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.ContrasenaRepetir, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary">Aceptar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
