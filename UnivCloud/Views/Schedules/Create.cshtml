@model UnivCloud.ViewsModels.Schedules

@{
    bool? state = ViewBag.State;
}

<h2>Agregar Horario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Horario</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row container">
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.HourStart, htmlAttributes: new { @class = "control-label col-md-2 Color-Black" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.HourStart, new { htmlAttributes = new { @class = "form-control", @type = "time", @min = "8:00", @max = "18:00" } })
                @Html.ValidationMessageFor(model => model.HourStart, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.HourEnd, htmlAttributes: new { @class = "control-label col-md-2 Color-Black" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.HourEnd, new { htmlAttributes = new { @class = "form-control", @type = "time", @min = "8:00", @max = "18:00" } })
                @Html.ValidationMessageFor(model => model.HourEnd, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-md-3">
            @Html.LabelFor(model => model.Day, htmlAttributes: new { @class = "control-label col-md-2 Color-Black" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Day, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Day, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2 Color-Black" })
        <div class="col-md-10">
            @Html.DropDownList("Subject", (SelectList)ViewBag.Subjects, "Seleccione la asignatura", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Professor, htmlAttributes: new { @class = "control-label col-md-2 Color-Black" })
        <div class="col-md-10">
            @Html.DropDownList("Professor", (SelectList)ViewBag.Professors, "Seleccione el profesor", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Professor, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Classroom, htmlAttributes: new { @class = "control-label col-md-2 Color-Black" })
        <div class="col-md-10">
            @Html.DropDownList("Classroom", (SelectList)ViewBag.Classrooms, "Seleccione el aula", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Classroom, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12 row">
            <a href="@Url.Action("Consult", "Schedules")" class="btn btn-info offset-1 col-md-3"><i class="fas fa-table"></i> Consultar</a>
            <input type="submit" value="Crear" id="Bod" class="btn btn-dark w-100 m-auto col-md-3 offset-1" />
        </div>
    </div>
</div>
}
@{Html.RenderPartial("_State", new StateValid { States = state });}
