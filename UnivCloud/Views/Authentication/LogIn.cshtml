@model UnivCloud_Logica.ViewModels.User
@{
    Layout = "~/Views/Shared/_Reference.cshtml";
}
<div class="Background_Standard">
    <div class="Content-Background Form">
        @using (Html.BeginForm("LogIn", "Authentication", FormMethod.Post, new { @autocomplete = "off" }))
        {
            <div class="Form_Standard">
                <h2 class="title">Autenticacion</h2>
                <div class="form-group">
                    @Html.EditorFor(x => x.UserLogin, new { htmlAttributes = new { @type = "text", @onkeypress = "return ValidarLetras(event)", @class = "Input_Des", @placeholder = "Usuario" } })
                </div>
                <div class="form-group">
                    @Html.EditorFor(x => x.PasswordLogin, new { htmlAttributes = new { @type = "password", @class = "Input_Des", @placeholder = "Contraseña" } })
                </div>
                <div class="Alert-Des">
                    <!--MENSAJES DE ESTADO SEGUN LA OPERACION-->
                    @TempData["State"]
                    @Html.ValidationMessage("Error")
                </div>
                <div class="Group-Des">
                    <button class="btn btn-dark">Aceptar</button>
                </div>
                <h5 class="Another" tabindex="-1">¿Desea crear Usuario?</h5>
            </div>
        }
        @Html.Partial("_RegisterUser")
    </div>
</div>
<script src="~/Scripts/VistaScripts/Authentication.js"></script>