@model UnivCloud_Datos.BaseDatos.Employee

@using (Html.BeginForm("Edit", "Employees", FormMethod.Post, new { @autocomplete = "off" }))
{
    @Html.AntiForgeryToken()

    <div class="Form_Standard_Univ " id="Body">
        <h4 class="text-center">Edicion de empleados</h4>
        <hr />
        @Html.HiddenFor(x => x.Code_Employee)
        @Html.HiddenFor(x => x.Name)
        @Html.HiddenFor(x => x.LastName)
        @Html.HiddenFor(x => x.Mail)
        @Html.HiddenFor(x => x.Birth_Date)
        @Html.HiddenFor(x => x.Image)
        @Html.HiddenFor(x => x.Admission_Date)
        @Html.HiddenFor(x => x.Position)
        <div class="row">
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Telephone, htmlAttributes: new { @class = "control-label col-md-2 Color-Black" })
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Telephone, new { htmlAttributes = new { @class = "form-control telefono" } })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label col-md-2 Color-Black" })
            <div class="col-md-12">
                @Html.DropDownList("Position", (SelectList)ViewBag.Positions, "Seleccione un cargo", new { @class = "form-control", @name = "Cargo" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2 Color-Black" })
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Address, 3, 20, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group col-md-12">
            <div class="custom-control custom-switch">
                @Html.CheckBoxFor(x => x.Status, new { @class = "custom-control-input" })
                <label class="custom-control-label Color-Black" for="Status">Activo</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 row">
                <a href="@Url.Action("Consult", "Employees")" class="btn btn-info offset-1 col-md-3"><i class="fas fa-table"></i> Consultar</a>
                <input type="submit" value="Actualizar" id="Bod" class="btn btn-dark w-100 m-auto col-md-3 offset-1" />
            </div>
        </div>
    </div>
}
